---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Collections - Redde Bookmark">
  <div id="collections-root"></div>
</BaseLayout>

<script>
  import { createRoot } from 'react-dom/client';
  import { createElement } from 'react';
  import CollectionsApp from '../../ui/CollectionsApp';

  const container = document.getElementById('collections-root');
  if (container) {
    const root = createRoot(container);
    root.render(createElement(CollectionsApp));
  }
</script>
